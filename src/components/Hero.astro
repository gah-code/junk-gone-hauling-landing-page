---
import Form from './Form.astro';
---

<div class='section-hero'>
  <div class='hero'>
    <div class='hero-text-box'>
      <div class='header__title'>
        <h1>
          PREMIER <span class='highlight'>JUNK</span> REMOVAL SERVICE
          <!-- highlight effect -->
          <br />
          <span class='highlight'>SAN JOSE</span>
          <!-- TO US <br /> -->

          <!-- <span class='highlight'>SAN JOSE</span> -->
        </h1>

        <p>
          We are a full service junk removal company, providing you with all the
          services that you need to get rid of your junk on your terms.
        </p>
        <!-- <p>We handle the heavy lifting, so you don't have to!</p> -->
        <p class='delivered-text'>
          Over <span>100+</span> happy customers reviews!
        </p>
        <button class='btn btn--text btn--scroll-to'
          >CALL NOW &DownArrow;</button
        >
      </div>
    </div>
    <Form />
  </div>
</div>

<style lang='scss'>
  @import '../styles/base/_color.scss';

  .section-hero {
    min-height: 70vh;
    position: relative;
    padding: max(5rem, 15vh) 0;
    isolation: isolate;
    background-color: #fbf8cd;
  }

  .hero {
    max-width: 120rem;
    margin: 0 auto;
    padding: 2rem 5rem;
    display: grid;
    grid-template-columns: minmax(300px, 1fr) minmax(350px, 1fr);
    column-gap: 2.8rem;
    // place-items: center;
    @media (max-width: 59em) {
      padding: 1rem 2.5rem;
      grid-template-columns: minmax(350px, 1fr) minmax(200px, 1fr);
      // grid-template-columns: 1fr;
      gap: 2rem;
    }

    @media (max-width: 44em) {
      padding: 1rem 2.5rem 3rem 2.5rem;
      grid-template-columns: 1fr;
      gap: 8rem;
      border: soild 3px #f4f4f4;
    }

    @media (max-width: 34em) {
      padding: 1rem 2.5rem 2.5rem 2.5rem;
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .hero-text-box {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header__title {
    flex: 1;
    display: grid;
    row-gap: 4.2rem;
    align-content: center;
    justify-content: center;
    align-items: start;
    justify-items: start;
    color: $color-primary-200;

    @media (max-width: 59em) {
      padding: 0 2rem;
      row-gap: 2.5rem;
      column-gap: 3rem;
    }

    @media (max-width: 34em) {
      row-gap: 2.5rem;
      margin-bottom: 4.5rem;
      // padding: 0 1.8rem;
    }
  }

  .header__title p {
    &:nth-child(odd) {
      font-weight: 700;
      font-size: 2rem;
      padding-bottom: 3rem;
    }
  }

  .highlight {
    position: relative;
    z-index: 1;
    // color: var(--clr-primary-400);
    background-clip: text;
    color: transparent;
    background-image: $gradient;

    // &::after {
    //   display: block;
    //   content: '';
    //   position: absolute;
    //   bottom: 0;
    //   left: 0;
    //   height: 100%;
    //   width: 100%;
    //   z-index: -1;
    //   opacity: 0.7;
    //   transform: scale(1.07, 1.05) skewX(-15deg);
    //   background-image: var(--gradient-primary);
    // }
  }

  .delivered-text {
    font-size: 1.8rem;
    font-weight: 700;
  }

  .delivered-text span {
    font-size: 2.8rem;
    color: var(--clr-primary-100);
    font-weight: 700;
  }

  .btn {
    display: inline-block;
    border: solid 4px var(--clr-secondary-300);
    background: none;
    font-size: 1.8rem;
    font-family: inherit;
    font-weight: 600;
    background-color: $color-primary-400;
    // border: none;
    padding: 1.25rem 4.2rem;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s;
    // color: beige;
    color: #fff;
  }

  @media (max-width: 34em) {
    .hero {
      padding: 0 1.5rem 0 1.5rem;
      place-items: center stretch;
      gap: 1rem;
    }
  }
</style>

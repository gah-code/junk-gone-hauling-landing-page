---
import Form from './Form.astro';
---

<div class='section-hero'>
  <div class='hero'>
    <div class='hero-text-box'>
      <div class='header__title'>
        <h1 class='heading-primary'>
          PREMIER <span class='highlight'>JUNK</span> REMOVAL SERVICE
          <!-- highlight effect -->
          <br />
          <span class='highlight'>SAN JOSE</span>
          <!-- TO US <br /> -->

          <!-- <span class='highlight'>SAN JOSE</span> -->
        </h1>

        <p class='hero-description'>
          We are a full service junk removal company, providing you with all the
          services that you need to get rid of your junk on your terms.
        </p>
        <div class='delivered-meals'>
          <div class='delivered-imgs'>
            <img src='/assets/image.jpeg' alt='Customer photo' />
            <img src='/assets/image.jpeg' alt='Customer photo' />
            <img src='img/customers/customer-3.jpg' alt='Customer photo' />
            <img src='img/customers/customer-4.jpg' alt='Customer photo' />
            <img src='img/customers/customer-5.jpg' alt='Customer photo' />
            <img src='img/customers/customer-6.jpg' alt='Customer photo' />
          </div>
          <p class='delivered-text'>
            <span>200+</span>clean up last year!
          </p>
        </div>
        <!-- <p>We handle the heavy lifting, so you don't have to!</p> -->
        <!-- <p class='delivered-text'>
          Over <span>100+</span> happy customers reviews!
        </p> -->
        <!-- <button class='btn btn--text btn--scroll-to'
          >CALL NOW &DownArrow;</button
        > -->
      </div>
    </div>
    <Form />
  </div>
</div>

<style lang='scss'>
  @import '../styles/base/_color.scss';

  .section-hero {
    min-height: 70vh;
    position: relative;
    // padding: max(5rem, 15vh) 0;
    padding: 4.8rem 0 9.6rem 0;

    isolation: isolate;
    background-color: #fbf8cd;
  }

  .hero {
    max-width: 130rem;
    margin: 0 auto;
    padding: 2rem 3rem;
    display: grid;
    grid-template-columns: minmax(320px, 1fr) minmax(330px, 1fr);
    gap: 2rem;
    align-items: center;

    // place-items: start;
    @media (max-width: 59em) {
      padding: 1rem 1.5rem;
      grid-template-columns: minmax(350px, 1fr) minmax(200px, 1fr);
      // grid-template-columns: 1fr;
      gap: 2rem;
    }

    @media (max-width: 44em) {
      padding: 1rem 1rem 3rem 1rem;
      grid-template-columns: 1fr;
      gap: 8rem;
      border: soild 3px #f4f4f4;
    }

    @media (max-width: 34em) {
      padding: 1rem 2.5rem 2.5rem 2.5rem;
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }

  .hero-description {
    font-size: 2rem;
    line-height: 1.6;
    margin-bottom: 4.5rem;
  }

  .hero-text-box {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .header__title {
    flex: 1;

    @media (max-width: 59em) {
      padding: 0 1.5rem;
      // row-gap: 2.5rem;
      // column-gap: 3rem;
    }

    @media (max-width: 34em) {
      row-gap: 2rem;
      margin-bottom: 3rem;
      // padding: 0 1.8rem;
    }
  }

  // .header__title p {
  //   &:nth-child(odd) {
  //     font-weight: 700;
  //     font-size: 2rem;
  //     padding-bottom: 3rem;
  //   }
  // }

  .highlight {
    position: relative;
    z-index: 1;
    // color: var(--clr-primary-400);
    background-clip: text;
    color: transparent;
    background-image: $gradient;

    // &::after {
    //   display: block;
    //   content: '';
    //   position: absolute;
    //   bottom: 0;
    //   left: 0;
    //   height: 100%;
    //   width: 100%;
    //   z-index: -1;
    //   opacity: 0.7;
    //   transform: scale(1.07, 1.05) skewX(-15deg);
    //   background-image: var(--gradient-primary);
    // }
  }

  .delivered-meals {
    display: flex;
    align-items: center;
    gap: 1.6rem;
    margin-top: 6rem;
  }

  .delivered-imgs {
    display: flex;
  }

  .delivered-imgs img {
    height: 4.8rem;
    width: 4.8rem;
    border-radius: 50%;
    margin-right: -1.6rem;
    border: 3px solid #fdf2e9;
  }

  .delivered-imgs img:last-child {
    margin: 0;
  }

  .delivered-text {
    font-size: 1.8rem;
    font-weight: 600;
  }

  .delivered-text span {
    color: #cf711f;
    font-weight: 700;
  }

  .btn {
    display: inline-block;
    border: solid 4px var(--clr-secondary-300);
    background: none;
    font-size: 1.8rem;
    font-family: inherit;
    font-weight: 600;
    background-color: $color-primary-400;
    // border: none;
    padding: 1.25rem 4.2rem;
    border-radius: 4px;
    cursor: pointer;
    transition: all 0.3s;
    // color: beige;
    color: #fff;
  }

  @media (max-width: 34em) {
    .hero {
      padding: 0 1.5rem 0 1.5rem;
      place-items: center stretch;
      gap: 1rem;
    }
  }
</style>

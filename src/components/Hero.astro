---
import Form from './Form.astro';
---

<div class='section-hero'>
  <div class='hero'>
    <div class='hero-text-box'>
      <div class='header__title'>
        <h1>
          LEAVE THE
          <!-- highlight effect -->
          <span class='highlight'>JUNK</span>
          TO US <br />
          <span class='highlight'>SAN JOSE</span>
        </h1>
        <p class='hero-description'>
          We handle the heavy lifting, so you don't have to!
        </p>
        <button class='btn--text btn--scroll-to'>Learn more &DownArrow;</button>
      </div>
    </div>
    <Form />
  </div>
</div>

<style lang='scss'>
  .section-hero {
    min-height: 70vh;
    position: relative;
    // background-color: transparent;
    outline: solid 3px #fdf2e9;
    padding: max(4rem, 15vh) 0;
  }
  .hero {
    /* 2080px */
    max-width: 130rem;
    margin: 0 auto;
    padding: 2rem 5rem;
    display: grid;
    grid-template-columns: minmax(350px, 1fr) minmax(300px, 1fr);
    gap: 2rem;
    place-items: center;
  }

  .hero-text-box {
    // height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    p {
      // font-size: 1.8rem;
      font-size: 24px;
      font-weight: 500;
      color: rgb(9, 9, 9);
      line-height: 1.5;
    }
  }

  .header__title {
    flex: 1;
    // font-family: 'Poppins', sans-serif;
    // font-style: bold;
    // font-size: 64px;
    // line-height: 1.3;
    color: var(--clr-text);
    display: grid;
    font-weight: 800;
    row-gap: 2rem;
    align-content: center;
    justify-content: center;

    align-items: start;
    justify-items: start;

    h1 {
      font-size: 64px;
      line-height: 1.1;
    }
  }

  .highlight {
    position: relative;
    z-index: 1;
  }

  .highlight::after {
    display: block;
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
    opacity: 0.6;
    transform: scale(1.07, 1.05) skewX(-15deg);
    background-image: var(--gradient-primary);
  }

  // .hero-description {
  //   font-size: 2rem;
  //   line-height: 1.5;
  // }
</style>

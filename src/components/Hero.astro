---
import Form from './Form.astro';
---

<div class='section-hero'>
  <div class='hero'>
    <div class='hero-text-box'>
      <div class='header__title'>
        <h1>
          LEAVE THE
          <!-- highlight effect -->
          <span class='highlight'>JUNK</span>
          TO US <br />
          <span class='highlight'>SAN JOSE</span>
        </h1>

        <p>We handle the heavy lifting, so you don't have to!</p>
        <button class='btn btn--text btn--scroll-to'
          >Learn more &DownArrow;</button
        >
      </div>
    </div>
    <Form />
  </div>
</div>

<style lang='scss' is:global>
  // @use '../styles/scss/base/font' as *;

  .section-hero {
    min-height: 70vh;
    position: relative;
    background-color: transparent;
    outline: solid 3px #fdf2e9;
    padding: max(4rem, 15vh) 0;
    isolation: isolate;
  }

  .section-hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: linear-gradient(
        180deg,
        rgba(0, 17, 255, 0.956),
        rgba(82, 121, 240, 0.586),
        rgba(103, 122, 180, 0.361)
      ),
      url('/assets/image.jpeg');
    opacity: 0.25; /* Set the desired opacity level here */
    background-position: center;
    background-size: cover;
    z-index: -1;
    inset: 0;
    /* Ensures the content of the container is not affected */
  }
  .hero {
    /* 2080px */
    max-width: 130rem;
    margin: 0 auto;
    padding: 2rem 8rem;
    display: grid;
    grid-template-columns: minmax(300px, 1fr) minmax(350px, 1fr);
    gap: 2rem;
    place-items: center;
  }

  .hero-text-box {
    // height: 80vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 1;
  }

  .header__title {
    flex: 1;
    display: grid;
    row-gap: 4rem;
    align-content: center;
    justify-content: center;

    align-items: start;
    justify-items: start;

    p {
      font-size: 1.8rem;
    }
  }

  .highlight {
    position: relative;
    z-index: 1;
  }

  .highlight::after {
    display: block;
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    height: 100%;
    width: 100%;
    z-index: -1;
    opacity: 0.6;
    transform: scale(1.07, 1.05) skewX(-15deg);
    background-image: var(--gradient-primary);
  }

  .btn {
    display: inline-block;
    background-color: black;
    // background-color: var(--clr-primary-200);
    font-size: 1.6rem;
    font-family: inherit;
    font-weight: 500;
    border: none;
    padding: 1.25rem 4.5rem;
    border-radius: 10rem;
    cursor: pointer;
    transition: all 0.3s;
  }
  @media (max-width: 59em) {
    .hero {
      padding: 1rem 0.5rem;
      grid-template-columns: minmax(250px, 1fr) minmax(250px, 1fr);
      gap: 0;
    }

    .header__title {
      flex: 1;
      display: grid;
      padding: 0 2rem;
      row-gap: 2.5rem;
    }

    .hero-text-box {
      // background-color: rgba(245, 224, 210, 0.28);
    }
  }

  /* BELOW 704px (Smaller tablets) */
  @media (max-width: 44em) {
    .section-hero {
      min-height: 60vh;
      // padding: max(3rem, 5vh) 0;
    }
    .hero {
      padding: 1rem 2.5rem 3rem 2.5rem;
      gap: 1.5rem;
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 34em) {
    .section-hero {
      padding: max(4rem, 10vh) 0;
    }
    .hero {
      padding: 1rem 0 2.5rem 1rem;
      gap: 1.2rem;
      grid-template-columns: 1fr;
    }

    .header__title {
      row-gap: 3rem;
      margin-bottom: 5rem;
    }
  }
</style>

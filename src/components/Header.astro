---
// import SectionContainer from './SectionContainer.astro';
import Logo from '../../public/junk-gone-logo.png'; // Image is 1600x900
import { Image } from 'astro:assets';
// import { Icon } from 'astro-icon/components';
---

<header class='header'>
  <Image class='logo lazy-img' src={Logo} alt='A description of my image.' />
  <nav class='main-nav'>
    <ul class='nav__list nav__list--primary'>
      <li class='nav__item'>
        <a href='#' class='nav__link' aria-label='Instagram'>
          <ion-icon name='logo-instagram'></ion-icon>
        </a>
      </li>
      <li class='nav__item'>
        <a
          href='https://www.tiktok.com/@junk_gone21'
          class='nav__link'
          aria-label='TikTok'
        >
          <ion-icon name='logo-tiktok'></ion-icon>
        </a>
      </li>
      <li class='nav__item'>
        <a
          href='https://www.youtube.com/@JunkGone408'
          class='nav__link'
          aria-label='YouTube'
        >
          <ion-icon name='logo-youtube'></ion-icon>
        </a>
      </li>
    </ul>
  </nav>

  <style lang='scss' is:global>
    @import '../styles/base/_color.scss';
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      height: 10rem;
      width: 100%;
      padding: 0 9rem;
      background-color: #fbf8cd;
      position: relative;
      // border: solid 4px #201919;
    }

    nav {
      display: flex;
      // position: relative;
      // margin-left: 9em;
    }

    .logo {
      width: 175px;
      height: auto;
    }

    ion-icon {
      font-size: 30px;
      color: $color-primary;
    }

    .nav__list {
      display: flex;
      margin: 0;
      // margin-left: 1rem;
    }

    .nav__list--primary {
      display: flex;
      // justify-content: center;
      margin: 0 auto;
      // border: solid 4px #9383;
    }

    .nav__item {
      margin: 0 2em 0 0.2em;
      // border: solid 4px #222;
    }

    .nav__link:link,
    .nav__link:visited {
      font-weight: 600;
      color: #f4f2f2;
      text-decoration: none;
      display: block;
      transition: all 0.3s;
    }

    .nav__link--btn:link,
    .nav__link--btn:visited {
      color: inherit;
      background-color: var(--clr-primary-200);
      color: var(--clr-secondary-100);
    }

    .sticky .header {
      position: fixed;
      top: 0;
      bottom: 0;
      width: 100%;
      height: 8rem;
      padding-top: 0;
      padding-bottom: 0;
      background-color: rgba(255, 255, 255, 0.97);
      z-index: 999;
      box-shadow: 0 1.2rem 3.2rem rgba(0, 0, 0, 0.03);
    }

    @media (max-width: 34em) {
      .header {
        padding: 0 3rem;
      }
      .logo {
        max-width: 135px;
        height: auto;
      }
      // .nav__item {
      //   font-size: 1.3rem;
      // }
    }
  </style>
</header>

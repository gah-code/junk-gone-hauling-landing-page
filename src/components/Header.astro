---
// import SectionContainer from './SectionContainer.astro';
import Logo from '../../public/junk-gone-logo.png'; // Image is 1600x900
import { Image } from 'astro:assets';
// import { Icon } from 'astro-icon/components';
---

<header class='header'>
  <Image class='logo lazy-img' src={Logo} alt='A description of my image.' />
  <nav class='main-nav'>
    <!-- <ul class="main-nav-list">
          <li><a class="main-nav-link" href="#how">How it works</a></li>
    </ul> -->
  </nav>
  <button class='nav__item'>
    <a class='nav__link nav__link--btn btn--show-modal' href='#'>Call Now</a>
  </button>
</header>

<style lang='scss' is:global>
  @import '../styles/base/_color.scss';
  // @import '../styles/base/_root.scss';

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 9.8rem;
    width: 100%;
    padding: 0 4rem;
    background-color: $color-secondary;
    position: relative;
  }
  .main-nav-list {
    list-style: none;
    display: flex;
    align-items: center;
    gap: 4.8rem;
  }

  .logo {
    width: 175px;
    height: auto;
  }

  .main-nav-link:link,
  .main-nav-link:visited {
    display: inline-block;
    text-decoration: none;
    color: #333;
    font-weight: 500;
    transition: all 0.3s;
  }

  .main-nav-link:hover,
  .main-nav-link:active {
    color: #cf711f;
  }

  .main-nav-link.nav-cta:link,
  .main-nav-link.nav-cta:visited {
    padding: 1.2rem 2.4rem;
    border-radius: 9px;
    color: #201919;
    // background-color: #e67e22;
  }

  .main-nav-link.nav-cta:hover,
  .main-nav-link.nav-cta:active {
    background-color: #cf711f;
  }

  .nav__item {
    margin-left: 4rem;
    background-color: #1e1e1e;
    border-radius: 8px;
    border: solid 3px $color-primary;
    font-size: 1.4rem;
  }

  .nav__link:link,
  .nav__link:visited {
    font-weight: 600;
    // border-radius: 2rem;
    color: #f4f2f2;
    text-decoration: none;
    display: block;
    transition: all 0.3s;
  }
  .nav__link--btn:link,
  .nav__link--btn:visited {
    padding: 0.95rem 4.4rem;
  }

  .nav__link--btn:hover,
  .nav__link--btn:active {
    color: inherit;
    background-color: var(--clr-primary-200);
    color: var(--clr-secondary-100);
  }

  .sticky .header {
    position: fixed;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 8rem;
    padding-top: 0;
    padding-bottom: 0;
    background-color: rgba(255, 255, 255, 0.97);
    z-index: 999;
    box-shadow: 0 1.2rem 3.2rem rgba(0, 0, 0, 0.03);
  }

  @media (max-width: 34em) {
    .logo {
      max-width: 115px;
      height: auto;
    }

    .nav__item {
      margin-left: 2rem;
      font-size: 1.3rem;
    }
  }
</style>

---
import { Image } from 'astro:assets';
import myImage from '../../assets/image.jpeg';
---

<section class='about'>
  <!-- <div class='section__title'>
    <h4 class='section__description'>LEAVE THE JUNK TO US!</h4>
    <h2 class='section__header'>
      Everything you need in a junk removal service
    </h2>
  </div> -->
  <div class='features'>
    <Image
      class='features__img lazy-img'
      src={myImage}
      alt='A description of my image.'
    />
    <div class='features__feature'>
      <div class='features__icon'>
        <svg data-icon='icon'>
          <use xlink:href='/icons.svg#icon-globe'></use>
        </svg>
      </div>
      <h5 class='features__header'>ECO-FRIENDLY</h5>
      <p class='features__description'>
        Not every junk item is meant to be thrown away, and we understand that.
        Our team sorts your junk into three categories: Recycle, Donate, Dispose
        Of, and removes it accordingly.
      </p>
    </div>
    <div class='features__feature'>
      <div class='features__icon'>
        <svg>
          <use xlink:href='/icons.svg#icon-credit-card'></use>
        </svg>
      </div>
      <h5 class='features__header'>
        Our team is professional, friendly, and dedicated
      </h5>
      <p class='features__description'>
        Quasi, fugit in cumque cupiditate reprehenderit debitis animi enim
        eveniet consequatur odit quam quos possimus assumenda dicta fuga
        inventore ab.
      </p>
      <!-- <button class='btn'>btn</button> -->
    </div>
    <Image class='features__img lazy-img' src={myImage} alt='Credit card' />
  </div>

  <style lang='scss' is:global>
    @import '../styles/base/_color.scss';

    .about {
      padding: 9rem 5rem;
      border-top: 1px solid #f4f5cd;
      background-color: #efece0;

      transition:
        transform 1s,
        opacity 1s;
    }

    .section__title {
      width: 80%;
      margin: 0 auto;
      // text-align: center;
      color: darkslategray;
      // padding: 0 0 8rem 0;
    }
    .section__description {
      color: #000;
    }
    .features {
      display: grid;
      padding-top: 9rem;
      grid-template-columns: 1fr 1fr;
      row-gap: 12rem;
      // column-gap: 2rem;
    }

    .features__img {
      width: 100%;
      height: auto; /* Ensures the image maintains its aspect ratio */
    }

    .features__feature {
      align-self: center;
      justify-self: center;
      width: 80%;
    }

    .features__icon {
      display: flex;
      align-items: center;
      justify-content: center;
      background-color: var(--clr-primary-100);
      height: 5rem;
      width: 5rem;
      border-radius: 50%;
      margin-bottom: 2rem;
    }

    .features__icon svg {
      height: 2.5rem;
      width: 2.5rem;
      fill: #fff;
      z-index: 100;
    }

    .features__header {
      font-size: 3rem;
      font-weight: 700;
      margin-bottom: 2rem;
      line-height: 1.05;

      color: var(--clr-primary-100);
    }

    .features__description {
      color: #131313;
      font-weight: 500;
      font-size: 1.6rem;
      margin-bottom: 2rem;
    }

    @media (max-width: 34em) {
      .about {
        padding: 8rem 1rem;
      }
      .section__title {
        text-align: center;
        width: 95%;
      }
    }
    // .features {
    //   display: grid;
    //   grid-template-columns: 1fr 1fr;
    //   row-gap: 12rem;
    // }

    @media (max-width: 44em) {
      section {
        padding: 6rem 1rem;
        border-top: 1px solid #ddd;
      }
      .features {
        // display: grid;
        grid-template-columns: 1fr;
        row-gap: 6.5rem;
        margin: 5rem 0;
        padding: 2rem 0;
      }

      .features__feature {
        width: 90%;
        padding: 2rem 0;
      }

      .features__header {
        font-size: 3rem;
      }

      .features__description {
        margin-bottom: 2rem;
      }

      .features__feature:nth-child(2) {
        grid-row: 1;
      }
      .features__feature:nth-child(3) {
        grid-row: 3;

        .btn {
          margin-top: 2rem;
        }
      }
      .features__feature:nth-child(6) {
        grid-row: 5;
      }
    }
  </style>
</section>
